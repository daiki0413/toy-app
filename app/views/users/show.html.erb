<div class="container">
    <h1>ユーザーの詳細</h1>
    <div class="row">
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <img src="<%="/user_images/#{@user.image}"%>">
              <div class="caption">
                <h3><%=@user.name%></h3>
                <p><%=@user.mail%></p>
                <p>
                <%if @current_user.id==@user.id%>
                    <%=link_to("編集","/users/#{@user.id}/edit",class:"btn btn-primary",role:"button")%>
                <%end%>    
              </div>
            </div>
          </div>
    </div>
    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><%=link_to(@user.name+"の投稿","/users/#{@user.id}")%></li>
      <li role="presentation"><%=link_to(@user.name+"がいいねした投稿","/users/#{@user.id}/likes")%></li>
    </ul>
    <%@user.posts.each do |post|%>
        <div class="media">
          <div class="media-left">
            <a href="#">
              <img class="media-object" src="<%="/user_images/#{post.user.image}"%>" width="100px" height="100px">
            </a>
          </div>
          <div class="media-body">
            <h4 class="media-heading"><%=link_to(post.user.name,"/users/#{post.user.id}")%></h4>
            <p><%=link_to(post.content,"/posts/#{post.id}")%></p>
          </div>
        </div>
    <%end%>
</div>