<div class="container">
    <h1>編集ページ</h1>
    <%@post.errors.full_messages.each do |message|%>
        <%=message%>
    <%end%>
    <%=form_tag("/posts/#{@post.id}/update")do%>
        <textarea name="content" class="form-control" rows="3">
            <%=@post.content%>
        </textarea>
        <%=submit_tag "編集",class:"btn btn-primary"%>
    <%end%>
</div>